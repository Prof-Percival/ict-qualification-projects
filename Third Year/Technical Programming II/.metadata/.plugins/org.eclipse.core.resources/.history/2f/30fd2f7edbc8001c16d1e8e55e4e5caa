public class Day {
    
    private int dayNo;
    private String day;
    
                    //Constructors
    //Default Constructor
    public Day()
    {
        dayNo = 1;
        day = "Mon";
    }
    
    //Constructor with parameter
    public Day(int day)
    {
        if (day > 0)
            this.dayNo = day;
        else
            this.dayNo = 1;
    }
    
    
